class Solution {
public:
    int totalMoney(int n) {
        int start = 1;
        int total = 0;
        int day =0;

        while(day < n){
        for(int i = 0 ; i < 7  && day < n ; i++){
            total += start + i;
            day++;
        }
        start++;
        }
        return total;
    }
};
