class Solution {
public:
    string finalString(string s) {
        vector<char>ans;
        for(int i = 0 ; i < s.length();i++){
           char ch = s[i];
            if(ch == 'i'){
                reverse(ans.begin() , ans.end());
            }
            else{
                ans.push_back(ch);
            }
        }return string(ans.begin(), ans.end());  // Convert the result vector back to a string
    }
};
