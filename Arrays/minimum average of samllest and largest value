class Solution {
public:
    double minimumAverage(vector<int>& nums) {
        sort(nums.begin() , nums.end());
        int left = 0 ;
        int right = nums.size()-1;
        set<double>s;
        while(left <= right){
           double  avg = abs(nums[left] + nums[right])/2.0;
           s.insert(avg);
           left++;
           right--; 
        }
  return *s.begin(); // set ka smallest element

    }
};
