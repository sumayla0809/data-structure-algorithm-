#include <iostream>
using namespace std;
int linearsearch(int arr[], int n, int k)
{
    for (int i = 0; i < n; i++)
    {
        if (arr[i] == k)
        {
            return i;
        }
    }
    return -1;
}
int main()
{
    int arr[] = {1, 2, 3, 4, 5};
    int n = 5;
    int k = 3;
    cout << " the element index is  " << linearsearch(arr, n, k) << endl;
    return 0;
}
