class Solution {
public:
    string largestGoodInteger(string num) {
        string maxstr = "";
        for(int i = 0 ; i <= num.length()-3;i++){
            if(num[i] == num[i+1] && num[i+1] == num[i+2]){
                string curr = num.substr(i , 3);
                if(curr > maxstr){
                    maxstr = curr;
                }
            }
        }
        return maxstr;
    }
};
