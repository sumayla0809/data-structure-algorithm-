class Solution {
public:
    bool judgeSquareSum(int c) {
    int left = 0;
    int right =(long) sqrt(c);
    while(left <= right){
        long sum =(long) left * left + (long)right * right;
        if(sum == c){
            return true;
        }
        else  if(sum < c){ //need bigger sum 
            left++;
        }
        else{
            right--; // need smaller sum 
        }
    }
    return false;
    }
};
