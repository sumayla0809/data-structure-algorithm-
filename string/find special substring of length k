class Solution {
public:
    bool hasSpecialSubstring(string s, int k) {
        
for(int i = 0 ; i+k <= s.length();i++){
string sub = s.substr(i , k);
bool allsame = true;
for(int j = 0 ; j < sub.length();j++){
    if(sub[j] != sub[0]){
    allsame =  false;
        break;
    }
}
            if (!allsame) continue;


if (i > 0 && s[i-1] == sub[0]) continue;
            if (i + k < s.size() && s[i+k] == sub[0]) continue;


return true;
}
return false;

    }
};
