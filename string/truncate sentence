class Solution {
public:
vector<string>findtoken(string s){
    vector<string>ans;
        stringstream ss(s);
        string token ;
        int count = 0;
        while(getline(ss , token , ' ')){
ans.push_back(token);
        }
return ans;
}
    string truncateSentence(string s, int k) {
vector<string>words = findtoken(s);
string result = "";
for(int i = 0 ;i < k ; i++){
    result += words[i];
     if (i != k - 1) result += " ";

}

return result ;
    }
};
