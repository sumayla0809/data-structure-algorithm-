class Solution {
public:
    int minimumDifference(vector<int>& nums, int k) {
        sort(nums.begin() , nums.end());
int mindiff = INT_MAX;
int n = nums.size();
for(int i = 0; i <= n - k ; i++){
    int diff = nums[i+k-1] - nums[i] ;
    mindiff = min(mindiff , diff);
}
        
        
        return mindiff;
    }
};
