class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        int n = nums.size();
        int maxavg = INT_MIN;
        int average = 0;
        // sum of one window   
        for(int i =0 ; i < k ; i++){
            average += nums[i];
        }
        maxavg = average ;
for(int i = k ; i < n ; i++){
    average += nums[i] - nums[i - k];
    maxavg = max(maxavg , average);
}
return(double) maxavg / k;
    }
};
